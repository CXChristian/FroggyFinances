@model expense_transactions.Models.CsvUploadViewModel

@{
    ViewData["Title"] = "Upload CSV File";
}
<div class="container my-5">
    <div class="card shadow-sm p-4">
        <h2 class="text-center text-success mb-4">Upload a CSV File</h2>
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger text-center">
                @TempData["ErrorMessage"]
            </div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["SuccessMessage"]
            </div>
        }
        <form asp-action="Upload" asp-asp-controller="CsvUpload" method="post" enctype="multipart/form-data">
            <div class="form-group mb-4">
                <label for="UploadedFile" class="form-label">Select a CSV File:</label>
                <input type="file" name="UploadedFile" class="form-control rounded-pill" required />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success btn-md rounded-pill px-5 mb-4">Upload</button>
            </div>
        </form>

    </div>
</div>