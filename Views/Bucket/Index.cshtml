@{
    ViewData["Title"] = "Bucket List";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="display-4 text-success">Buckets</h1>
        <a asp-action="Create" class="btn btn-success btn-md rounded-pill px-4 mt-3">Create a Bucket</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-minty-header">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Category</th>
                    <th scope="col">Company</th>
                    <th scope="col" class="text-center">Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bucket in Model)
                {
                    <tr>
                        <td>@bucket.Id</td>
                        <td>@bucket.Category</td>
                        <td>@bucket.Company</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@bucket.Id" class="btn btn-sm btn-primary mx-1">Edit</a>
                            <a asp-action="Details" asp-route-id="@bucket.Id" class="btn btn-sm btn-info mx-1">Details</a>
                            <a asp-action="Delete" asp-route-id="@bucket.Id" class="btn btn-sm btn-danger mx-1">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>