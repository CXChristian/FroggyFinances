@model expense_transactions.Models.Bucket

@{
    ViewData["Title"] = "Edit";
}

<div class="container my-5">
    <div class="card shadow-sm p-4">
        <h1 class="text-center text-success mb-4">Edit Bucket</h1>
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Category" class="control-label text-dark">Category</label>
                        <input asp-for="Category" class="form-control rounded-pill" placeholder="Enter category" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Company" class="control-label text-dark">Company</label>
                        <input asp-for="Company" class="form-control rounded-pill" placeholder="Enter company name" />
                        <span asp-validation-for="Company" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Edit" class="btn btn-success btn-sm px-5 rounded-pill" />
                    </div>
                </form>
                <div class="text-center mt-3">
                    <a asp-action="Index" class="btn btn-secondary btn-sm rounded-pill px-5">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>