@{
    ViewData["Title"] = "Home Page";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - expense_transactions</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.0/dist/minty/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/expense_transactions.styles.css" asp-append-version="true" />
</head>

<body>
    @if (!User.Identity!.IsAuthenticated)
    {
        <div class="container mt-5">
            <div class="p-5 text-center bg-body-tertiary rounded-3 text-white">
                <h1 class="text-dark">Financial Visualizations</h1>
                <p class="col-lg-8 mx-auto fs-5 secondary-color">
                    Easily upload a CSV file to display your categorized expenses through charts.
                </p>
                <div class="row justify-content-center mb-4">
                    <div class="col-12 col-md-6 mb-2">
                        <img src="~/images/TransactionTable.png" alt="Banner Image" class="img-fluid home-transaction-images" />
                    </div>
                    <div class="col-12 col-md-6 mb-2">
                        <img src="~/images/TransactionPieChart.png" alt="Banner Image" class="img-fluid home-transaction-images" />
                    </div>
                </div>
                <div class="d-flex flex-column flex-md-row gap-2 justify-content-center">
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">
                        <button class="btn btn-success btn-lg px-4 rounded-pill mb-2 mb-md-0" type="button">
                            Register Now
                        </button>
                    </a>
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
                        <button class="btn btn-secondary btn-lg px-4 rounded-pill mb-2 mb-md-0" type="button">
                            Login
                        </button>
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="container my-5">
            <div class="p-5 text-center bg-body-tertiary rounded-3">
                <h1 class="text-body-emphasis text-dark mb-5">Welcome Back, @User.Identity?.Name!</h1>
                <div class="d-flex flex-column flex-md-row gap-2 justify-content-center mb-5">
                    <a class="nav-link text-dark" asp-controller="CsvUpload" asp-action="Index">
                        <button class="btn btn-success btn-lg px-4 rounded-pill mb-2 mb-md-0" type="button">
                            Upload CSV
                        </button>
                    </a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Report" asp-action="Index">
                        <button class="btn btn-secondary btn-lg px-4 rounded-pill mb-2 mb-md-0" type="button">
                            Reports
                        </button>
                    </a>
                    @if (User.IsInRole("admin"))
                    {
                        <a class="nav-link text-dark" asp-area="" asp-controller="Bucket" asp-action="Index">
                            <button class="btn btn-secondary btn-lg px-4 rounded-pill mb-2 mb-md-0" type="button">
                                Buckets
                            </button>
                        </a>
                        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">
                            <button class="btn btn-secondary btn-lg px-4 rounded-pill mb-2 mb-md-0" type="button">
                                User Manager
                            </button>
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</body>