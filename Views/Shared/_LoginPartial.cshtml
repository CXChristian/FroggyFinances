@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav ms-auto align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item mx-2">
            <span class="nav-link text-success">Hello, @User.Identity?.Name!</span>
        </li>
        <li class="nav-item mx-2">
            <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-outline-success rounded-pill px-4">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item mx-2">
            <a class="btn btn-outline-success rounded-pill px-4" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item mx-2">
            <a class="btn btn-outline-primary rounded-pill px-4" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>